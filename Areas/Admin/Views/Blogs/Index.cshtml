@model IEnumerable<Blog>

@{
    var Title = "MyBlog";
    ViewBag.Title = "Blog Website";
    ViewBag.Description = "This Blog Has Everything";
    ViewBag.Keywords = "Blog programing travel photography";
}

<div class="d-flex" id="wrapper">
    <partial name="_AdminNavbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
            <a class="btn btn-warning float-right" asp-area="Admin" asp-controller="Blogs" asp-action="Edit">Add-Post</a>
        </nav>
        <div class="container-fluid">
            <div class="text-center mt-3">
                <h2>@Title</h2>
                <hr />
            </div>
            <div class="table-responsive p-2">
                <table id="Blog" class="table table-striped table-bordered" style="width:100%">
                    <thead class="thead-dark">
                        <tr class="table-info">
                            <th>Title</th>
                            <th>Body</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Tags</th>
                            <th>Created</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
</div>
@section scripts {
    <script src="~/js/post.js"></script>
    <script src="~/js/menutoggle.js"></script>
}