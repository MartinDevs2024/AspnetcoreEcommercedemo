@model AspnetcoreEcommercedemo.ViewModels.MyMessagesViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-hero">
    <div class="section-center">
        <h3 class="page-hero-title">Home / Contact</h3>
    </div>
</section>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mt-5">
                <h2 class="text-uppercase title-text">HAVE ANY QUESTIONS? I WOULD LIKE TO HEAR FROM YOU, PLEASE FILL IN THE CONTACT FORM</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <!-- Addresses -->
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="bg-white box-shadow text-center p-5 px-md-2 px-lg-5">
                    <i class="fa fa-map-marker fa-4x text-primary icon-lg mb-4"></i>
                    <h4 class="mb-4">My Address</h4>
                    <ul class="list-unstyled">
                        <li>123 Main St, Davenport, Fl - 33837</li>
                    </ul>
                </div>
            </div>
            <!-- phone -->
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="bg-white box-shadow text-center p-5 px-md-2 px-lg-5">
                    <i class="fa fa-phone fa-4x text-primary icon-lg mb-4"></i>
                    <h4 class="mb-4">Phone Number</h4>
                    <ul class="list-unstyled">
                        <li>(863) 969-8248</li>
                    </ul>
                </div>
            </div>
            <!-- Mail -->
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="bg-white box-shadow text-center p-5 px-md-2 px-lg-5">
                    <i class="fa fa-envelope fa-4x text-primary icon-lg mb-4"></i>
                    <h4 class="mb-4">Message Me</h4>
                    <ul class="list-unstyled">
                        <li>electronicsmf@aol.com</li>
                        <li>uxdeveloper82@gmail.com</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="js-tilt">
                    <header class="masthead">
                        <div class="container h-100">
                            <div id="map">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12 text-center">
                                            <h3>Am in Polk County</h3>
                                            <hr class="primary">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="embed-responsive embed-responsive-21by9">
                                            <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d450906.42910153605!2d-81.89883115548457!3d28.002875335561708!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88dd6ac339a94f0f%3A0x38be38b0aeedeb98!2sPolk%20County%2C%20FL!5e0!3m2!1sen!2sus!4v1595981023610!5m2!1sen!2sus" allowfullscreen></iframe>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <hr />
                        </div>
                    </header>
                </div>
            </div>
            <div class="col-lg-6">
                <h3 class="text-uppercase">Contact Form</h3>
                <form asp-controller="MyMessages" asp-action="Create" method="post" id="messageForm" autocomplete="off">
                    <input asp-for="MyMessage.Id" type="hidden" />
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" asp-for="MyMessage.Name" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" asp-for="MyMessage.Email" />
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea class="form-control" asp-for="MyMessage.Message">
                         </textarea>
                    </div>
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </form>
            </div><!--col-lg-12-->
        </div><!--row-->
    </div><!--container-->
</section>
@section scripts {
    <script src="~/js/mymessage.js"></script>
}