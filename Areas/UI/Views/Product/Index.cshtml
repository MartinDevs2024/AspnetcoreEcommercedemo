@model IEnumerable<AspnetcoreEcommercedemo.Models.Products>

@{
    ViewData["Title"] = "Product Page";

}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="heading"> <span>All Products</span> </h1>
        </div>
        <div class="top container">
            <h1>All Products</h1>
            <form>
                <select>
                    <option value="1">Default Sorting</option>
                    <option value="2">Sort By Price</option>
                    <option value="3">Sort By Popularity</option>
                    <option value="4">Sort By Sale</option>
                    <option value="5">Sort By Rating</option>
                </select>
                <span><i class='bx bx-chevron-down'></i></span>
            </form>
        </div>
    </div>
    <div class="row pt-5">
        <div class="product-center container">
            @foreach (var product in Model)
            {
                <div class="product">
                    <div class="product-header">
                        <img src="~/@product.Image" />
                        <ul class="icons">
                            <span><i class="bx bx-heart"></i></span>
                            <a href="cart.html">
                                <span><i class="bx bx-shopping-bag"></i></span>
                            </a>
                            <span><i class="bx bx-search"></i></span>
                        </ul>
                    </div>
                    <div class="product-footer">
                        <a href="product-details.html">
                            <label style="color:red">Price: $@product.Price</label>
                            <label class="text-uppercase" style="color:black">@product.Name</label>
                        </a>
                        <div class="rating">
                            <i class="bx bxs-star"></i>
                            <i class="bx bxs-star"></i>
                            <i class="bx bxs-star"></i>
                            <i class="bx bxs-star"></i>
                            <i class="bx bx-star"></i>
                        </div>
                        <a asp-action="Detail" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary pul-right btn-outline-info">Details</a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
