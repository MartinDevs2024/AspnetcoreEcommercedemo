@model IEnumerable<AspnetcoreEcommercedemo.Models.Products>

@{ 
    ViewData["Title"] = "Product Page";

}

<div class="container">
    <div class="row">
          <div class="col-lg-12">
              <div class="title">
                  <h1>Featured Products</h1>
              </div>
          </div>
    </div>
    <div class="row">
        @foreach (var product in Model) 
        { 
            <div class="col-md-6 col-lg-4 col-xs-12">
                <div class="card mb-4 grey-bg">
                    <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height:300px" />
                    <!-- Card Content-->
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group-lg">
                                <!--Title-->
                                <h3 class="card-title">
                                    <label style="color:red">Price: $@product.Price</label>
                                    <label class="text-uppercase" style="color:black">@product.Name</label>
                                </h3> 
                                <a asp-action="Detail" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary pul-right btn-outline-info">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
